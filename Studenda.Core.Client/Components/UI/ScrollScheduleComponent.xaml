<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Studenda.Core.Client.Components.UI.ScrollScheduleComponent"
             xmlns:local="clr-namespace:Studenda.Core.Client.Components.UI"
             xmlns:vm="clr-namespace:Studenda.Core.Client.ViewModels">
    <ScrollView BindingContext="{Binding Source={RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=ScheduleViewModel, Mode=TwoWay}">
        <local:ScheduleComponent Schedule="{Binding ScheduleList}" />
    </ScrollView>
</ContentView>
