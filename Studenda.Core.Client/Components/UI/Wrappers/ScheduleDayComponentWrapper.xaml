<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Studenda.Core.Client.Components.UI.Wrappers.ScheduleDayComponentWrapper"
             xmlns:ui="clr-namespace:Studenda.Core.Client.Components.UI"
             xmlns:vm="clr-namespace:Studenda.Core.Client.ViewModels">
    <ui:ScheduleDayComponent BindingContext="{Binding Source={RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=ScheduleViewModel, Mode=OneTime}" WeekDayTitle="Расписание">
        <CollectionView
        HorizontalScrollBarVisibility="Never"
        IsEnabled="False"
        ItemsSource="{Binding CurrentDaySubjectList}"
        SelectionMode="None"
        VerticalScrollBarVisibility="Never">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <ui:SubjectComponent
                    SubjectPlace="{Binding Place}"
                    SubjectTimeEnd="{Binding Time}"
                    SubjectTimeStart="{Binding Time}"
                    SubjectTitle="{Binding Title}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ui:ScheduleDayComponent>
</ContentView>
