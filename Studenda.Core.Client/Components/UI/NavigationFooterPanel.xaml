<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Studenda.Core.Client.Components.UI.NavigationFooterPanel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid HeightRequest="50" BackgroundColor="#D3C9FD">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Column="0"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="82"
            Text="Главная"/>
        <Button
            Grid.Column="1"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="82" 
            Text="Расписание"/>
        <Button
            Grid.Column="2"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="82" 
            Text="Журнал"/>

    </Grid>
</ContentView>
