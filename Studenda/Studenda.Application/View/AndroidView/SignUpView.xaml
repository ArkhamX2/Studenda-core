<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Studenda.View.AndroidView.SignUpView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">
    <VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Введите логин" />
            <Entry Placeholder="Логин" Style="{StaticResource ProfileEntryTheme}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Введите пароль" />
            <Entry
                IsPassword="True"
                Placeholder="пароль"
                Style="{StaticResource ProfileEntryTheme}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Повторите пароль" />
            <Entry
                IsPassword="True"
                Placeholder="Пароль"
                Style="{StaticResource ProfileEntryTheme}" />
        </VerticalStackLayout>

        <HorizontalStackLayout>
            <CheckBox
                BackgroundColor="Black"
                HeightRequest="20"
                HorizontalOptions="Center"
                WidthRequest="20" />
            <Label Margin="0" Style="{StaticResource WhiteLabelTheme}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>