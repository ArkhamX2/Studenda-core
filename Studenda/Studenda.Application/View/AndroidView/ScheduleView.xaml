<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Studenda.View.AndroidView.ScheduleView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:Studenda.Components.UI"
    BackgroundColor="{DynamicResource MainWindowBackgroundColor}"
    Shell.NavBarIsVisible="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="66"/>
            <RowDefinition Height="97"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <components:NavigationBarComponent Grid.Row="0" Title="Расписание" />
        <components:CalendarCarouselComponent Grid.Row="1" WeekTypeTitle="{Binding TypeOfWeek}" />
        <ScrollView Grid.Row="2">
            <components:ScheduleComponent Schedule="{Binding ScheduleList}" />
        </ScrollView>
    </Grid>
</ContentPage>