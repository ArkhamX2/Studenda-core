<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Studenda.View.AndroidView.NotificationView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:Studenda.Components.UI"
    BackgroundColor="{DynamicResource MainWindowBackgroundColor}"
    Shell.NavBarIsVisible="False">
    <VerticalStackLayout>
        <components:NavigationBarComponent Title="Уведомления" />
        <CollectionView ItemsSource="{Binding NotificationCollection}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <components:NotificationComponent NotificationDate="{Binding Date}" NotificationName="{Binding Name}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>