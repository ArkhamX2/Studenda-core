<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Studenda.Components.UI.ScheduleDayComponent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:Studenda.Components.UI">
    <ContentView.ControlTemplate>
        <ControlTemplate>

            <VerticalStackLayout Margin="15,15,15,0">
                <Label
                    Margin="5,0,0,24"
                    FontFamily="InterBold"
                    FontSize="20"
                    Text="{TemplateBinding WeekDayTitle}"
                    TextColor="{StaticResource ForegroundColor}" />
                <Border
                    Padding="0,0,0,10"
                    BackgroundColor="White"
                    Stroke="White">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5" />
                    </Border.StrokeShape>
                    <ContentPresenter />
                </Border>
            </VerticalStackLayout>

        </ControlTemplate>
    </ContentView.ControlTemplate>

</ContentView>
